<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PushWorkout"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp">


    <TextView
        android:id="@+id/workout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chest_and_triceps"
        android:textSize="25sp"
        android:textStyle="bold"
        android:paddingBottom="15dp"/>

    <TextView
        android:id="@+id/workout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bench_press"
        android:layout_below="@+id/workout_title"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:paddingBottom="10dp"/>
    <TextView
        android:id="@+id/benchSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set"
        android:layout_below="@+id/workout_1"
        android:paddingEnd="50dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/benchSet"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        >
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_2"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_3"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/benchWeight"
        android:layout_below="@+id/workout_1"
        android:layout_toEndOf="@+id/benchSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight_kg"
        android:paddingEnd="62dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/benchWeight"
        android:orientation="vertical"
        android:paddingStart="200dp"
        >
        <EditText
            android:id="@+id/BenchPress_Set1_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/BenchPress_Set2_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/BenchPress_Set3_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/benchReps"
        android:layout_below="@+id/workout_1"
        android:layout_toEndOf="@+id/benchWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reps"/>
    <LinearLayout
        android:id="@+id/benchPressDetailsSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/benchWeight"
        android:orientation="vertical"
        android:paddingLeft="60dp"
        >
        <EditText
            android:id="@+id/BenchPress_Set1_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/BenchPress_Set2_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/BenchPress_Set3_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/workout_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/incline_bench_press"
        android:layout_below="@+id/benchPressDetailsSection"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:paddingBottom="10dp"
        android:paddingTop="15dp"/>
    <TextView
        android:id="@+id/inclineBenchSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set"
        android:layout_below="@+id/workout_2"
        android:paddingEnd="50dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inclineBenchSet"
        android:orientation="vertical"
        android:paddingStart="5dp"
        >
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_2"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_3"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/inclineBenchWeight"
        android:layout_below="@+id/workout_2"
        android:layout_toEndOf="@+id/inclineBenchSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight_kg"
        android:paddingEnd="62dp"/>
    <LinearLayout
        android:id="@+id/inclineBenchPressDetailsSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inclineBenchSet"
        android:orientation="vertical"
        android:paddingLeft="60dp"
        >
        <EditText
            android:id="@+id/InclineBenchPress_Set1_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/InclineBenchPress_Set2_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/InclineBenchPress_Set3_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/inclineBenchReps"
        android:layout_below="@+id/workout_2"
        android:layout_toEndOf="@+id/benchWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reps"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inclineBenchWeight"
        android:orientation="vertical"
        android:paddingStart="200dp"
        >
        <EditText
            android:id="@+id/InclineBenchPress_Set1_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/InclineBenchPress_Set2_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/InclineBenchPress_Set3_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/workout_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tricep_extension"
        android:layout_below="@+id/inclineBenchPressDetailsSection"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:paddingBottom="10dp"
        android:paddingTop="15dp"/>
    <TextView
        android:id="@+id/tricepSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set"
        android:layout_below="@+id/workout_3"
        android:paddingEnd="50dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tricepSet"
        android:orientation="vertical"
        android:paddingStart="5dp"
        >
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_2"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_3"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tricepExtensionWeight"
        android:layout_below="@+id/workout_3"
        android:layout_toEndOf="@+id/inclineBenchSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight_kg"
        android:paddingEnd="62dp"/>
    <LinearLayout
        android:id="@+id/tricepExtensionDetailsSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tricepSet"
        android:orientation="vertical"
        android:paddingLeft="60dp"
        >
        <EditText
            android:id="@+id/tricepExtension_Set1_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/tricepExtension_Set2_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/tricepExtension_Set3_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tricepExtensionReps"
        android:layout_below="@+id/workout_3"
        android:layout_toEndOf="@+id/benchWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reps"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tricepSet"
        android:orientation="vertical"
        android:paddingStart="200dp"
        >
        <EditText
            android:id="@+id/tricepExtension_Set1_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/tricepExtension_Set2_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/tricepExtension_Set3_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@+id/tricepExtensionDetailsSection"
        android:layout_marginTop="45dp">

        <Button
            android:id="@+id/cancel_workout_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/cancel_workout"
            android:background="@drawable/cancel_workout_border"
            android:textStyle="bold"
            android:textSize="15sp"
            app:backgroundTint="@null"/>
        <Button
            android:id="@+id/save_workout_btn"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/save_workout"
            android:background="@drawable/save_workout_border"
            android:textStyle="bold"
            android:textSize="15sp"
            app:backgroundTint="@null"/>

    </LinearLayout>


</RelativeLayout>
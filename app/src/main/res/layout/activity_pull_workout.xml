<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PullWorkout"
    android:paddingStart="75dp"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/pull_workout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_and_biceps_title"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textStyle="bold"
        android:paddingBottom="15dp"/>

    <TextView
        android:id="@+id/pull_workout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lat_pulldown"
        android:layout_below="@+id/pull_workout_title"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:paddingBottom="10dp"/>
    <TextView
        android:id="@+id/latSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set"
        android:layout_below="@+id/pull_workout_1"
        android:paddingEnd="50dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/latSet"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        >
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_2"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_3"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/latWeight"
        android:layout_below="@+id/pull_workout_1"
        android:layout_toEndOf="@+id/latSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight_kg"
        android:paddingEnd="62dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/latWeight"
        android:orientation="vertical"
        android:paddingStart="200dp"
        >
        <EditText
            android:id="@+id/Lat_Set1_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Lat_Set2_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Lat_Set3_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/latReps"
        android:layout_below="@+id/pull_workout_1"
        android:layout_toEndOf="@+id/latWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reps"/>
    <LinearLayout
        android:id="@+id/latDetailsSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/latWeight"
        android:orientation="vertical"
        android:paddingLeft="60dp"
        >
        <EditText
            android:id="@+id/Lat_Set1_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Lat_Set2_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Lat_Set3_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/pull_workout_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seated_row"
        android:layout_below="@+id/latDetailsSection"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:paddingBottom="10dp"
        android:paddingTop="15dp"/>
    <TextView
        android:id="@+id/rowSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set"
        android:layout_below="@+id/pull_workout_2"
        android:paddingEnd="50dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rowSet"
        android:orientation="vertical"
        android:paddingStart="5dp"
        >
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_2"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_3"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/rowWeight"
        android:layout_below="@+id/pull_workout_2"
        android:layout_toEndOf="@+id/rowSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight_kg"
        android:paddingEnd="62dp"/>
    <LinearLayout
        android:id="@+id/rowDetailsSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rowSet"
        android:orientation="vertical"
        android:paddingLeft="60dp"
        >
        <EditText
            android:id="@+id/Row_Set1_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Row_Set2_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Row_Set3_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/rowReps"
        android:layout_below="@+id/pull_workout_2"
        android:layout_toEndOf="@+id/rowWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reps"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rowWeight"
        android:orientation="vertical"
        android:paddingStart="200dp"
        >
        <EditText
            android:id="@+id/Row_Set1_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Row_Set2_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Row_Set3_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/pull_workout_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bicep_curl"
        android:layout_below="@+id/rowDetailsSection"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:paddingBottom="10dp"
        android:paddingTop="15dp"/>
    <TextView
        android:id="@+id/bicepSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set"
        android:layout_below="@+id/pull_workout_3"
        android:paddingEnd="50dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bicepSet"
        android:orientation="vertical"
        android:paddingStart="5dp"
        >
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_2"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_3"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tricepExtensionWeight"
        android:layout_below="@+id/pull_workout_3"
        android:layout_toEndOf="@+id/bicepSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight_kg"
        android:paddingEnd="62dp"/>
    <LinearLayout
        android:id="@+id/bicepDetailsSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bicepSet"
        android:orientation="vertical"
        android:paddingLeft="60dp"
        >
        <EditText
            android:id="@+id/Bicep_Set1_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Bicep_Set2_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Bicep_Set3_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tricepExtensionReps"
        android:layout_below="@+id/pull_workout_3"
        android:layout_toEndOf="@+id/latWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reps"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bicepSet"
        android:orientation="vertical"
        android:paddingStart="200dp"
        >
        <EditText
            android:id="@+id/Bicep_Set1_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Bicep_Set2_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Bicep_Set3_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@+id/bicepDetailsSection"
        android:layout_marginTop="45dp"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/cancel_workout_btn_pull"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/cancel_workout"
            android:background="@drawable/cancel_workout_border"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginBottom="25dp"
            app:backgroundTint="@null"/>
        <Button
            android:id="@+id/save_workout_btn_pull"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/save_workout"
            android:background="@drawable/save_workout_border"
            android:textStyle="bold"
            android:textSize="15sp"
            app:backgroundTint="@null"/>

    </LinearLayout>

</RelativeLayout>
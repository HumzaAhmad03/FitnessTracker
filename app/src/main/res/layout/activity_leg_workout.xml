<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LegWorkout"
    android:paddingLeft="75dp"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/leg_workout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/legs"
        android:layout_centerHorizontal="true"
        android:textSize="5sp"
        android:textStyle="bold"
        android:paddingBottom="15dp"/>

    <TextView
        android:id="@+id/leg_workout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/squats"
        android:layout_below="@+id/leg_workout_title"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:paddingBottom="10dp"/>
    <TextView
        android:id="@+id/squatSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set"
        android:layout_below="@+id/leg_workout_1"
        android:paddingEnd="50dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/squatSet"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        >
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_2"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_3"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/squatWeight"
        android:layout_below="@+id/leg_workout_1"
        android:layout_toEndOf="@+id/squatSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight_kg"
        android:paddingEnd="62dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/squatWeight"
        android:orientation="vertical"
        android:paddingStart="200dp"
        >
        <EditText
            android:id="@+id/Squat_Set1_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Squat_Set2_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Squat_Set3_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/squatReps"
        android:layout_below="@+id/leg_workout_1"
        android:layout_toEndOf="@+id/squatWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reps"/>
    <LinearLayout
        android:id="@+id/squatDetailsSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/squatWeight"
        android:orientation="vertical"
        android:paddingLeft="60dp"
        >
        <EditText
            android:id="@+id/Squat_Set1_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Squat_Set2_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Squat_Set3_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/leg_workout_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/leg_extensions"
        android:layout_below="@+id/squatDetailsSection"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:paddingBottom="10dp"
        android:paddingTop="15dp"/>
    <TextView
        android:id="@+id/extensionSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set"
        android:layout_below="@+id/leg_workout_2"
        android:paddingEnd="50dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/extensionSet"
        android:orientation="vertical"
        android:paddingStart="5dp"
        >
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_2"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_3"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/extensionWeight"
        android:layout_below="@+id/leg_workout_2"
        android:layout_toEndOf="@+id/extensionSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight_kg"
        android:paddingEnd="62dp"/>
    <LinearLayout
        android:id="@+id/extensionDetailsSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/extensionSet"
        android:orientation="vertical"
        android:paddingLeft="60dp"
        >
        <EditText
            android:id="@+id/Extension_Set1_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Extension_Set2_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Extension_Set3_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/extensionReps"
        android:layout_below="@+id/leg_workout_2"
        android:layout_toEndOf="@+id/extensionWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reps"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/extensionWeight"
        android:orientation="vertical"
        android:paddingStart="200dp"
        >
        <EditText
            android:id="@+id/Extension_Set1_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Extension_Set2_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Extension_Set3_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/leg_workout_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calf_raises"
        android:layout_below="@+id/extensionDetailsSection"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:paddingBottom="10dp"
        android:paddingTop="15dp"/>
    <TextView
        android:id="@+id/calfSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set"
        android:layout_below="@+id/leg_workout_3"
        android:paddingEnd="50dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calfSet"
        android:orientation="vertical"
        android:paddingStart="5dp"
        >
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_2"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
        <TextView
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_3"
            android:gravity="center"
            android:paddingBottom="5dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/calfWeight"
        android:layout_below="@+id/leg_workout_3"
        android:layout_toEndOf="@+id/calfSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight_kg"
        android:paddingEnd="62dp"/>
    <LinearLayout
        android:id="@+id/calfDetailsSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calfSet"
        android:orientation="vertical"
        android:paddingLeft="60dp"
        >
        <EditText
            android:id="@+id/Calf_Set1_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Calf_Set2_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Calf_Set3_Weight"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tricepExtensionReps"
        android:layout_below="@+id/leg_workout_3"
        android:layout_toEndOf="@+id/extensionWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reps"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calfSet"
        android:orientation="vertical"
        android:paddingStart="200dp"
        >
        <EditText
            android:id="@+id/Calf_Set1_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Calf_Set2_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/Calf_Set3_Reps"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/input_field_border"
            android:inputType="numberDecimal"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@+id/calfDetailsSection"
        android:layout_marginTop="45dp"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/cancel_workout_btn_leg"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/cancel_workout"
            android:background="@drawable/cancel_workout_border"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginBottom="25dp"
            app:backgroundTint="@null"/>
        <Button
            android:id="@+id/save_workout_btn_leg"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/save_workout"
            android:background="@drawable/save_workout_border"
            android:textStyle="bold"
            android:textSize="15sp"
            app:backgroundTint="@null"/>

    </LinearLayout>

</RelativeLayout>